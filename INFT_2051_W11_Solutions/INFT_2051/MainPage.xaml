<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="INFT_2051.MainPage"
             Title="INFT_2051">

    <ScrollView>
        <FlexLayout
            Direction="Column"
            JustifyContent="SpaceEvenly"
            AlignItems="Center">

            <Image
                Source="dragon.png"
                WidthRequest="200"/>

            <Label
                Text="INFT2051 Demo App"
                Style="{StaticResource HomeLabel}"/>

            <Button
                x:Name="CharacterButton"
                Text="My Characters"
                HorizontalOptions="Center"
                Clicked="CharacterButton_Clicked">
            </Button>

        </FlexLayout>
    </ScrollView>
</ContentPage>
